{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "preserve",
    "jsxImportSource": "astro",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "allowJs": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "isolatedModules": true
  },
  "skipLibCheck": true,
  "include": [
    "src/**/*.astro",
    "src/**/*.ts",
    "src/**/*.md",
    "src/**/*.mdx",
    ".astro/types.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "public"
  ]
}
